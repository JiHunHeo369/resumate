<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.boilerplate.domain.user.mapper.UserMapper">

    <resultMap id="UserRoleMap" type="com.boilerplate.domain.user.entity.custom.UserRole">
        <result column="role_code" property="roleCode"/>
        <association property="user" javaType="com.boilerplate.domain.user.entity.User">
            <id column="id" property="id"/>
            <result column="login_id" property="loginId"/>
            <result column="name" property="name"/>
            <result column="email" property="email"/>
            <result column="deleted" property="deleted"/>
            <result column="role_id" property="roleId"/>
            <result column="password" property="password"/>
        </association>
    </resultMap>

    <select id="findByLoginId" resultMap="UserRoleMap">
        select
            u.*,
            r.code as role_code
        from users u
        inner join roles r on r.id = u.id
        where
            login_id = #{loginId}
    </select>

</mapper>